<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/commentItemIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textSize="20dp"
        android:layout_alignTop="@+id/linearLayout5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout5"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.201" />

    <ImageView
        android:id="@+id/commentItemBoneImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/bone0"
        android:layout_weight="0.10"
        android:layout_marginEnd="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="@+id/commentItemIdTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/commentItemBoneImageView"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/commentItemBodyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="body" />

        <TextView
            android:id="@+id/commentItemKeywordTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="keyword" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>