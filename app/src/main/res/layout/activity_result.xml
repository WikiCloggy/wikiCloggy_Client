<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="gg.soc.wikicloggy.ResultActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/resultUserImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/resultExampleImageView1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/album1_cloggy" />

        <ImageView
            android:id="@+id/resultExampleImageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultUserImageView"
            app:srcCompat="@drawable/album1_cloggy" />

        <ImageView
            android:id="@+id/resultExampleImageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintLeft_toRightOf="@+id/resultExampleImageView2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultExampleImageView1"
            app:srcCompat="@drawable/album1_cloggy" />

        <ImageView
            android:id="@+id/resultExampleImageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/album1_cloggy" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/resultKeywordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="Keyword" />

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:layout_margin="15dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resultAnalysisTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Explain"
            android:textSize="20dp" />
    </FrameLayout>

</LinearLayout>
